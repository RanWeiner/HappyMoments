<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_light_grey"
    android:orientation="vertical"
    android:layoutDirection="ltr">
    android:weightSum="1">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_weight="0.1"
        >
    </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.8"
            android:weightSum="4"
            android:background="@color/app_theme_nude"
            >

            <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/detect_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_margin="16dp"-->
                <!--app:fab_size="normal"-->
                <!--android:src="@drawable/ic_wand"-->
                <!--android:backgroundTint="@color/theme_deep_red"-->
                <!--/>-->
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/clear_all_btn"
                android:src="@drawable/ic_refresh"
                android:background="@null"
                android:layout_weight="1.5"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detect_btn_id"
                android:src="@drawable/ic_white_wand"
                android:background="@null"
                android:layout_weight="1"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_more_btn"
                android:src="@drawable/ic_add_a_photo"
                android:background="@null"
                android:layout_weight="1.5"
                />



        </LinearLayout>


